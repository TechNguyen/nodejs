{{!-- Truyen acc --}}
{{#with acc}}
  <header class="header__wrapper">
          <div class="header__action">
            <div class="header__logo">
                <img src="/img/logo2.jpg" alt="It-logo1">
            </div>
            <div class="header__clubname">
                <p class="header__clubname--text">IT-SUPPORTER .</p>
            </div>
        </div>
        <div class="header__action">
                <div class="header__user--message">
                   <i class="fa-solid fa-bell"></i>
                </div>
                <div class="header__user--mail">
                    <i class="fa-solid fa-envelope"></i>
                </div>
            <div class="header__wrapper--navigation">


                <div class="header__user--image">
                    <img src="/img/banner.jpg" alt="">
                    <ul class="header__user--navi">
                        <li>
                            <i class="fa-solid fa-user"></i>
                            <a href="/auth/admin/infor/{{_id}}">Thông tin tài khoản</a></li>
                        <li>
                            <i class="fa-solid fa-pen"></i>
                            <a href="/auth/admin/update/{{_id }}">
                        Sửa thông tin</a></li>
                        <li>
                            <i class="fa-solid fa-pen-to-square"></i>
                            <a href="/auth/admin/post/{{_id}}">Đăng bài</a></li>
                        <li><a href="/auth/admin//logout/{{_id}}"><i class="fa-solid fa-right-from-bracket"></i>
                        Đăng xuất</a></li>
                </ul>
                </div>
            </div>
        </div>
    </header>
{{/with}}     